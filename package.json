{
  "name": "todoist-scheduler-electron",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "main.js",
  "packageManager": "bun@1.1.29",
  "scripts": {
    "dev": "concurrently -k \"bun run dev:renderer\" \"bun run dev:main\"",
    "dev:renderer": "vite --config vite.config.js",
    "dev:main": "node scripts/dev-electron.mjs",
    "build": "vite build --config vite.config.js",
    "build:dmg": "bun run build && electron-builder --mac --dmg",
    "start": "electron .",
    "test:e2e": "bun run build && playwright test"
  },
  "build": {
    "appId": "com.user.todoist-scheduler",
    "productName": "Todoist Scheduler",
    "files": [
      "dist/**",
      "main.js",
      "preload.cjs",
      "assets/**",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    }
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dotenv": "^16.4.5",
    "electron": "^30.0.2",
    "lucide-react": "^0.426.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "@playwright/test": "^1.50.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.13.3",
    "playwright": "^1.50.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  }
}
